{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@layouts/*": ["src/layouts/*"],
            "@pages/*": ["src/pages/*"],
            "@components/*": ["src/components/*"],
            "@content/*": ["src/content/*"],
            "@assets/*": ["src/assets/*"],
            "@styles/*": ["src/styles/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@utils/*": ["src/utils/*"],
            "@i18n/*": ["src/i18n/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    }
}
